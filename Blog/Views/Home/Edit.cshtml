@model dynamic; 
@{
    ViewData["Title"] = "Edit post";
}

<h1>Edit post</h1>

    <form action="/edit/@Model.Post.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title"  value="@Model.Post.Title" class="form-control" id="title" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="desc">Description</label>
            <input type="text" id="desc" name="description" value="@Model.Post.Description" class="form-control">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input manifest="price" name="price" type="text" value="@Model.Post.Price" class="form-control">
        </div>
        <label for="category">Category</label>

        <select id="category" name="category" class="form-control">
            @foreach (var item in Model.Categories)
            {
                @if (item.Id == Model.Post.Category.Id)
                {
                    <option value="@item.Id" selected>
                        @item.Name
                    </option>
                    continue;
                }

                <option value="@item.Id" >
                    @item.Name
                </option>

            }
        </select>

        <label for="supplier">Supplier</label>

        <select id="supplier" name="supplier" class="form-control">
            @foreach (var item in Model.Suppliers)
            {
                @if (item.Id == Model.Post.Supplier.Id)
                {
                    <option value="@item.Id"  selected>
                        @item.Name
                    </option>
                    continue;
                }
                <option value="@item.Id" >
                    @item.Name
                </option>


            }
        </select>
        <label for="manufacture">Manufacture</label>

        <select id="manufacture" name="manufacture" class="form-control">
            @foreach (var item in Model.Manufactures)
            {
                @if (item.Id == Model.Post.Manufacture.Id)
                {
                    <option value="@item.Id"  selected>
                        @item.Name
                    </option>

                    continue;
                }
                <option value="@item.Id" >
                    @item.Name
                </option>

            }
        </select>
        <br />
        <button type="submit" name="form" class="btn btn-primary">Edit post</button>
</form>